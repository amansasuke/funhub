.rwd-table {
    margin: auto;
    min-width: 300px;
    width: 100%;
    max-width: 100%;
    border-collapse: collapse;
    -webkit-box-shadow: 0 1px 20px 0 rgba(69, 90, 100, 0.08);
    box-shadow: 0 1px 20px 0 rgba(69, 90, 100, 0.08);
}

.rwd-table tr:first-child {
    border-top: none;
    background: #40e0d0;
    color: #fff;
}

.rwd-table tr {
    border-top: 1px solid #ddd;
    /*border-bottom: 1px solid #ddd;*/
    background-color: #ffff;
}

.rwd-table th {
    display: none;
    text-transform: capitalize;
}

.rwd-table td {
    display: block;
    text-transform: capitalize;
    font-size: 14px;
    font-weight: 500;
}

.rwd-table td:first-child {
    margin-top: 0.5em;
}

.rwd-table td:last-child {
    margin-bottom: 0.5em;
}

.rwd-table td:before {
    content: attr(data-th) ": ";
    font-weight: bold;
    width: 120px;
    display: inline-block;
    color: #000;
}

.rwd-table th,
.rwd-table td {
    text-align: left;
}

.rwd-table {
    color: #333;
    border-radius: 0.4em;
    overflow: hidden;
}

.rwd-table tr {}

.rwd-table th,
.rwd-table td {
    padding: 0.5em 1em;
}

@media screen and (max-width: 601px) {
    .rwd-table tr:nth-child(2) {
        border-top: none;
    }
}

@media screen and (min-width: 600px) {
    .rwd-table tr:hover:not(:first-child) {
        background-color: #d8e7f3;
    }

    .rwd-table td:before {
        display: none;
    }

    .rwd-table th,
    .rwd-table td {
        display: table-cell;
        padding: 0.25em 0.5em;
    }

    .rwd-table th:first-child,
    .rwd-table td:first-child {
        padding-left: 0;
    }

    .rwd-table th:last-child,
    .rwd-table td:last-child {
        padding-right: 0;
    }

    .rwd-table th,
    .rwd-table td {
        padding: 1em !important;
    }
}
.gap{
    margin-top:4px;
}
.gap button{
    width: 120px;
}
</style>


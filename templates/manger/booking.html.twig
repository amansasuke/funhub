<script>
        $(function() {
            var calendarEl = document.getElementById('fullcalendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                themeSystem: 'bootstrap',
                initialView: 'dayGridMonth',
                initialDate: '{{ today ? today|date('Y-m-d') : '' }}',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: [
                    
                    {% for booking in bookings %}
                    
                    { 
                    title: '{{booking.title}}',
                    url: '{{booking.meeting}}',
                    start: '{{ booking.date ? booking.date|date('Y-m-d') : '' }}T{{ booking.time ? booking.time|date('H:i') : '' }}',
                    },
                    
                    {% endfor %}

                    {% for orderbook in orderbooking %}
                    
                    { 
                    title: '{{orderbook.title}}',
                    start: '{{ orderbook.date ? orderbook.date|date('Y-m-d') : '' }}T{{ orderbook.time ? orderbook.time|date('H:i') : '' }}',
                    end: '{{ orderbook.enddate ? orderbook.enddate|date('Y-m-d') : '' }}T{{ orderbook.time ? orderbook.time|date('H:i') : '' }}',
                    },
                    
                    {% endfor %}                    
                ]
            });
            setTimeout(function() {
                calendar.render();
            }, 250)
        });
    </script>

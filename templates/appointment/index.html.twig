{% extends 'dashstyle.html.twig' %}
{% block title %}Manger{% endblock %}
{% block body %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
}

.example-wrapper code {
    background: #F5F5F5;
    padding: 2px 6px;
}


.rwd-table {
    margin: auto;
    min-width: 300px;
    width: 100%;
    max-width: 100%;
    border-collapse: collapse;
    -webkit-box-shadow: 0 1px 20px 0 rgba(69, 90, 100, 0.08);
    box-shadow: 0 1px 20px 0 rgba(69, 90, 100, 0.08);
}

.rwd-table tr:first-child {
    border-top: none;
    background: #5bb7c5;
    color: #fff;
}

.rwd-table tr {
    border-top: 1px solid #ddd;
    /*border-bottom: 1px solid #ddd;*/
    background-color: #ffff;
}

.rwd-table th {
    display: none;
    text-transform: capitalize;
}

.rwd-table td {
    display: block;
    text-transform: capitalize;
    font-size: 14px;
    font-weight: 500;
}

.rwd-table td:first-child {
    margin-top: 0.5em;
}

.rwd-table td:last-child {
    margin-bottom: 0.5em;
}

.rwd-table td:before {
    content: attr(data-th) ": ";
    font-weight: bold;
    width: 120px;
    display: inline-block;
    color: #000;
}

.rwd-table th,
.rwd-table td {
    text-align: left;
}

.rwd-table {
    color: #333;
    border-radius: 0.4em;
    overflow: hidden;
}

.rwd-table tr {}

.rwd-table th,
.rwd-table td {
    padding: 0.5em 1em;
}
.createbtn{
    padding-top:10px;
}

@media screen and (max-width: 601px) {
    .rwd-table tr:nth-child(2) {
        border-top: none;
    }
}

@media screen and (min-width: 600px) {
    .rwd-table tr:hover:not(:first-child) {
        background-color: #d8e7f3;
    }

    .rwd-table td:before {
        display: none;
    }

    .rwd-table th,
    .rwd-table td {
        display: table-cell;
        padding: 0.25em 0.5em;
    }

    .rwd-table th:first-child,
    .rwd-table td:first-child {
        padding-left: 0;
    }

    .rwd-table th:last-child,
    .rwd-table td:last-child {
        padding-right: 0;
    }

    .rwd-table th,
    .rwd-table td {
        padding: 1em !important;
    }
}
</style>

<body>
      
    <div class="wrapper">
        {% include '/manger/mangernev.html.twig' %}
        <div class="main">
            <nav class="navbar navbar-expand navbar-theme">
                <a class="sidebar-toggle d-flex mr-2">
                    <i class="hamburger align-self-center"></i>
                </a>
                {# <form class="form-inline d-none d-sm-inline-block">
                    <input class="form-control form-control-lite" type="text" placeholder="Search projects...">
                </form> #}
                {{ render(controller(
                    'App\\Controller\\DashboardController::recentArticles'
                )) }}
            </nav>
            <main class="content">
                <div class="container-fluid">
                    <div class="header">
                        <h1 class="header-title">
                            Manger
                        </h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="dashboard-default.html">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="#">Manger</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Appointment</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="col-sm-12 col-md-12 col-lg-12">
                                        <div class="page-content">
                                            <div class="inner-box">
                                                <div class="dashboard-box">
                                                    <h5 class="dashbord-title">Appointment</h5>
                                                </div>
                                                <div class="dashboard-wrapper">
                                                    <table class="rwd-table">
                                                        <tbody>
                                                            <tr>
                                                                <th>Id</th>
                                                                <th>orderid</th>
                                                                <th>StartDate</th>
                                                                <th>EndDate</th>
                                                                <th>StartTime</th>
                                                                <th>EndTime</th>
                                                                <th>Manger Status</th>
                                                                <th>BookingStatus</th>
                                                                <th>actions</th>
                                                            </tr>
                                                            {% for appointment in appointments %}
                                                            <tr>
                                                                <td>{{ appointment.id }}</td>                                                               
                                                                <td>
                                                                    {{appointment.ClientId}}
                                                                    {# {% for users in user %}
                                                                    {% if users.id == appointment.ClientId %}
                                                                    {{ users.name }}
                                                                    {% endif %}
                                                                    {% endfor %} #}
                                                                </td>
                                                                <td>{{ appointment.StartDate ? appointment.StartDate|date('Y-m-d') : '' }}</td>
                                                                <td>{{ appointment.EndDate ? appointment.EndDate|date('Y-m-d') : '' }}</td>
                                                                <td>{{ appointment.StartTime ? appointment.StartTime|date('h:i A') : '' }}</td>
                                                                <td>{{ appointment.EndTime ? appointment.EndTime|date('h:i A') : '' }}</td>
                                                                <td>{{ appointment.MangerStart }}</td>
                                                                {# <td>{{ appointment.ClientStartDate ? appointment.ClientStartDate|date('Y-m-d') : '' }}</td>
                                                                <td>{{ appointment.ClientStartTime ? appointment.ClientStartTime|date('H:i:s') : '' }}</td>
                                                                <td>{{ appointment.ClientEndTime ? appointment.ClientEndTime|date('H:i:s') : '' }}</td>
                                                                <td>{{ appointment.ClientStatus }}</td> #}
                                                                <td>{{ appointment.BookingStatus }}</td>
                                                                {# <td>
                                                                    <a href="{{ path('app_appointment_show', {'id': appointment.id}) }}">show</a>
                                                                    <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}">edit</a>
                                                                </td> #}
                                                                <td>
                                                                <div class="btns-actions">
                                                                    <a class="btn btn-info" href="{{ path('app_appointment_show', {'id': appointment.id}) }}"><i class="lni-eye"></i></a>  
                                                                    <a class="btn btn-warning" href="{{ path('app_appointment_edit', {'id': appointment.id}) }}"><i class="lni-pencil"></i></a>                                                                     
                                                                </div>
                                                                </td>
                                                            </tr>
                                                            {% else %}
                                                            <tr>
                                                                <td colspan="14" style="text-align:center;"><h3> no records found</h3> </td>
                                                            </tr>
                                                            {% endfor %}
                                                        </tbody>
                                                    </table>
                                                    
                                                </div>
                                                <div class="createbtn">
                                                    <a href="{{ path('app_appointment_new') }}" class="btn btn-primary" style="width:100%; hight:40px; padding:8px; border: 1px solid #5bb7c5;">Create new</a>
                                                </div>
                                            </div>
                                        </div>                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </main>
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-muted">
                        <div class="col-8 text-left">
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <a class="text-muted" href="#">Support</a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="text-muted" href="#">Privacy</a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="text-muted" href="#">Terms of Service</a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="text-muted" href="#">Contact</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-4 text-right">
                            <p class="mb-0">
                                &copy; 2020 - <a href="dashboard-default.html" class="text-muted">Spark</a>
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    {# #}
    <div class="wrapper">
        {% include '/dashboard/nev.html.twig' %}
        <div class="main">
            <nav class="navbar navbar-expand navbar-theme">
                <a class="sidebar-toggle d-flex mr-2">
                    <i class="hamburger align-self-center"></i>
                </a>
                {# <div style="padding-top: 10px;">
                    <h4></h4>
                </div> #}
                {# <form class="form-inline d-none d-sm-inline-block">
                    <input class="form-control form-control-lite" type="text" placeholder="Search ...">
                </form> #}
                {{ render(controller(
                'App\\Controller\\DashboardController::recentArticles'
                )) }}
            </nav>
            <main class="content">
                <div class="container-fluid">
                    <div class="header">
                        <h1 class="header-title">
                            My Documents
                        </h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item active"><a href="#">My Documents</a></li>
                                {# <li class="breadcrumb-item active" aria-current="page">Blank Page</li> #}
                            </ol>
                        </nav>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="card-actions float-left">
                                        <h5 class="card-title mb-0">My Documents</h5>
                                    </div>
                                    <div class="card-actions float-right">
                                        <form>
                                            <div class="row">
                                                <div class="col-4">
                                                    <input type="date" name="updateat" placeholder="search" class="form-control input-md">
                                                </div>
                                                <div class="col-4">
                                                    <input type="text" name="search" placeholder="search" class="form-control input-md">
                                                </div>
                                                <div class="col-4">
                                                    <div class="post-btn" style="text-align:center" ;="">
                                                        <button type="submin" class="btn btn-common" style="font-size: 14px;background-color:#5bb7c5;color:#ffff; width: 100%;"><i class="fa fa-search"></i> Filter </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="card-body">
                                    {% if mydoc|length ==0 %}
                                    <div class="row ">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <div class="dashboardbox">
                                                {# <div class="noimg">
                                                    <img src="assets/img/details/kindpng_1749396.png" height="300px;">
                                                </div> #}
                                            </div>
                                        </div>
                                    </div>
                                    {% else %}
                                    <div class="row" style="padding-top:2px;">
                                      {% for mydocs in srchdocforme %}
                                        <div class="col-6">
                                          <div class="wrimagecard wrimagecard-topimage">
                                            <a href="{{ asset("uploads/brochures/")}}{{ mydocs.doclink }}">
                                                <div class="wrimagecard-topimage_header" style="background-color: rgba(22, 160, 133, 0.1) ">
                                                    <center><i class="fa fa-file" style="color:#16A085"></i></center>
                                                </div>
                                                <div class="wrimagecard-topimage_title">
                                                    <h4>{{ mydocs.docname }}
                                                        <div class="pull-right badge"><i class="fa fa-download" style="color:green; font-size:30px;" aria-hidden="true"></i></div>
                                                    </h4>
                                                </div>
                                            </a>
                                          </div>
                                        </div>                                        
                                      {% endfor %}
                                      
                                    </div>
                                    <div class="row" >
                                        {% for doc in orderdoc %}
                                        <div class="col-6">
                                          <div class="panel panel-default">
                                              <div class="panel-heading">
                                                  <h4 class="panel-title">
                                                      <a data-toggle="collapse" data-parent="#accordion{{doc.id}}" href="#collapse{{doc.id}}">
                                                          Order Id: {{doc.id}} {{doc.prodname}} 
                                                      </a>
                                                  </h4>
                                              </div>
                                              <div id="collapse{{doc.id}}" class="panel-collapse collapse">
                                                  <div class="panel-body">                                                           
                                                      <table class="table">
                                                        <tbody>
                                                          {% for docinfo in doc.docs %} 
                                                            <tr>                                                                                                                                   
                                                              <td>{{ docinfo.docname }}</td>
                                                              <td>
                                                                {% if docinfo.doclink %}                                                                    
                                                                  <a href="{{ asset("uploads/brochures/")}}{{ docinfo.doclink }}"><i class="fa fa-download" style="color:green; font-size:30px;" aria-hidden="true"></i>
                                                                  </a>
                                                                {% endif %}
                                                              </td>
                                                            </tr>
                                                          {% endfor %}
                                                          {% for mydocs in mydoc %}
                                                            {% if mydocs.id == doc.id  %} 
                                                              <tr>                                                                                                                                   
                                                                <td>{{ mydocs.docname }}</td>
                                                                <td>
                                                                  {% if mydocs.doclink %}                                                                    
                                                                    <a href="{{ asset("uploads/brochures/")}}{{ mydocs.doclink }}"><i class="fa fa-download" style="color:green; font-size:30px;" aria-hidden="true"></i>
                                                                    </a>
                                                                  {% endif %}
                                                                </td>
                                                              </tr>
                                                            {% endif %}
                                                          {% endfor %}
                                                        </tbody>
                                                      </table>                                                                                                                        
                                                  </div>
                                              </div>
                                          </div>
                                        </div>
                                      {% endfor %}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </main>
        </div>
    </div>

ol {
    counter-reset: gradient-counter;
    list-style: none;
    margin: 1rem 0;
    padding-left: 30px;
}

ol>li {
    background: white;
    border-radius: 0 0.5rem 0.5rem 0.5rem;
    counter-increment: gradient-counter;

    min-height: 5px;
    /*padding: 1rem 1rem 1rem 3rem;*/
    position: relative;
    color: black;
    font-size: 16px;
}

ol>li::before,
ol>li::after {
    content: "";


    overflow: hidden;
    position: absolute;


}

ol>li::before {
    align-items: flex-end;
    content: counter(gradient-counter);
    color: #1d1f20;
    display: flex;
    margin-left: -15px;
    justify-content: flex-end;

    z-index: 1;
}

ol>li:nth-child(10n+1):before {}

ol>li+li {
    margin-top: 0.2rem;
}

.btn-newadd {
    background: #ffff;
    border: 1px solid black;
    font-weight: 600;
